<% content_for :subtitle do %><h2><%= @post.title %></h2><% end %>
<section id="show-post">
  <nav><%= link_to 'Back', posts_path, { :class => 'button' } %></nav>
  <menu><%= link_to 'âœŽ', edit_post_path(@post), { :class => 'icon' } %></menu>
  <% unless @post.post_picture.url == '' %>
    <figure class="post-picture">
      <%= image_tag @post.post_picture.url %>
    </figure>
  <% end %>
  <%= @post.text.html_safe %>

  <% content_for :aside do %>
    <% @post.comments.reverse_each do |comment| %>
      <section class="comment" tabindex="0">
        <%= render comment %>
      </section>
    <% end %>
  <% end %>
  
  <%= render "comments/form" %>
</section>
